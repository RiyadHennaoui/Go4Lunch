<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_worker_main_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardView.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/item_worker_iv_main_picture_profile"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="H,16:9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/item_worker_cv_circle_picture_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="12dp"
                android:elevation="12dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_worker_iv_main_picture_profile">

                <ImageView
                    android:id="@+id/item_worker_iv_circle_picture_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/item_worker_tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Victoria Smith"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@+id/item_worker_cv_circle_picture_profile"
                app:layout_constraintTop_toTopOf="@+id/item_worker_cv_circle_picture_profile"
                app:layout_constraintBottom_toTopOf="@+id/item_worker_tv_work"/>

            <TextView
                android:id="@+id/item_worker_tv_work"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Work"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#8A000000"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@+id/item_worker_cv_circle_picture_profile"
                app:layout_constraintTop_toBottomOf="@+id/item_worker_tv_name"/>

            <Button
                android:id="@+id/item_worker_bt_expand"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/ic_expand_more_black_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/item_worker_cv_circle_picture_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/item_worker_cv_circle_picture_profile" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_worker_expandableView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/item_worker_tv_work"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <ImageView
                android:id="@+id/item_worker_iv_mail_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_contact_mail_black_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/item_worker_tv_mail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="(999) 345 32 45"
                android:layout_marginStart="32dp"
                android:textColor="#000"
                style="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintTop_toTopOf="@+id/item_worker_iv_mail_icon"
                app:layout_constraintStart_toEndOf="@id/item_worker_iv_mail_icon"
                />
            <Button
                android:id="@+id/item_worker_bt_chat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/ic_chat_black_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/item_worker_iv_mail_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/item_worker_iv_mail_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>